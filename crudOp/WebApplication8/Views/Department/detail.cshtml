@model Department
@{
    ViewData["Title"] = "Department Detail";
}

<h1>Department Detail</h1>

<div class="form-group">
    <label asp-for="code"></label>
    @Html.DisplayFor(m => m.code, new { @class = "form-control mb-3" })
</div>

<div class="form-group">
    <label asp-for="name"></label>
    @Html.DisplayFor(m => m.name, new { @class = "form-control mb-3" })
</div>

<div class="form-group">
    <label asp-for="dateCreation"></label>
    @Html.DisplayFor(m => m.dateCreation, new { @class = "form-control mb-3", Format = "{0:MM/dd/yyyy}" })
</div>

<div class="col-12">
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</div>  